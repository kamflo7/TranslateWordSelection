{
  "manifest_version": 4,

  "name": "My translateExtension",
  "description": "Select the unknow word on page and press ALT+S (PL+EN) or ALT+X (EN)",
  "version": "1.4",

  "browser_action": {
    "default_icon": "dictionary.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "go-dictionary": {
      "suggested_key": {
        "default": "Alt+S"
        },
      "description": "go dictionary with selected word"
    },
    "go-dictionary-eng": {
      "suggested_key": {
        "default": "Alt+X"
        },
      "description": "go dictionary with selected word (eng)"
    }
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
	   "tabs",
     "http://*/",
     "contextMenus"
  ]
}